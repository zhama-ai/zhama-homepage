# 应用环境配置
NODE_ENV=production
PORT=3000

# SMTP邮件配置 (必需)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@zhama.com

# 联系邮箱配置
CONTACT_EMAIL=contact@zhama.com

# 速率限制配置
RATE_LIMIT_MAX=5
RATE_LIMIT_WINDOW=60000

# Next.js配置
NEXT_TELEMETRY_DISABLED=1
